{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "es2020",
    "lib": ["es2020"],
    "sourceMap": true,
    "types": ["reflect-metadata", "node"],
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules", "dist"
  ],
  "ts-node": {
    "esm": true,
    "compiler": "typescript"
  }
}